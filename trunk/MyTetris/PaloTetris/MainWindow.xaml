<Window x:Class="PaloTetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Palo-Tetris" MinHeight="600" MinWidth="400" Height="600" Width="400" Loaded="Window_Loaded" Focusable="true" FocusManager.IsFocusScope="True" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="_Game" Click="MenuItem_Click_2" />
            <MenuItem Header="_Settings" Click="MenuItem_Click_1" />
            <MenuItem Header="_About" Click="MenuItem_Click" />
        </Menu>
        
        <ContentControl Name="ActiveItem" Grid.Row="1" Margin="5" />
        
        <StatusBar Grid.Row="2" />
    </Grid>
</Window>
